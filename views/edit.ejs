<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%=editPost.title%></div>
    <form class="ui form" action="/blogs/<%=editPost._id%>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%=editPost.title%>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" value="<%=editPost.image%>">
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]"><%=editPost.body%></textarea>
        </div>
        <button class="ui pink big basic button">Submit</button>
    </form>
</div>

<% include ./partials/footer %>